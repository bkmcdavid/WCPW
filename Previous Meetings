    <style>
        body { font-family: Arial, sans-serif; margin: 2em; }
        .year-section { margin-bottom: 2em; }
        .details { display: none; margin-top: 1em; border: 1px solid #ccc; padding: 1em; border-radius: 5px; }
        label { font-weight: bold; }
        select { margin-bottom: 1em; }
    </style>
    <script>
        function showDetails() {
            var years = document.getElementsByClassName('details');
            for (var i = 0; i < years.length; i++) {
                years[i].style.display = 'none';
            }
            var selected = document.getElementById('yearSelect').value;
            if (selected) {
                document.getElementById('details-' + selected).style.display = 'block';
            }
        }
    </script>
</head>
<body>
    <h1>West Coast Plato Workshop Info</h1>
    <label for="yearSelect">Select Year:</label>
    <select id="yearSelect" onchange="showDetails()">
